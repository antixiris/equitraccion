---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { supabase } from '../../lib/supabase';
import type { BlogPost } from '../../lib/supabase';

// Get the slug from the URL
const { slug } = Astro.params;

// Fetch the blog post from Supabase
const { data: post, error } = await supabase
  .from('blog_posts')
  .select('*')
  .eq('slug', slug)
  .eq('published', true)
  .single();

// If post not found or error, return 404
if (error || !post) {
  return Astro.redirect('/404');
}

// Map category to display name
const categoryMap: Record<string, string> = {
  'forestales': 'Silvicultura',
  'desarrollo': 'Desarrollo Personal',
  'formacion': 'Formación',
  'fundacion': 'Fundación'
};

const categoryDisplay = categoryMap[post.category] || post.category;

// Determine mode based on category
let mode: 'b2b' | 'b2c' | 'hybrid' = 'hybrid';
if (post.category === 'forestales' || post.category === 'formacion') {
  mode = 'b2b';
} else if (post.category === 'desarrollo') {
  mode = 'b2c';
}

// Format date
const publishedDate = new Date(post.published_at || post.created_at);
const formattedDate = publishedDate.toLocaleDateString('es-ES', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout
  title={`${post.title} | Blog Equitracción`}
  description={post.excerpt}
  mode={mode}
>
  <Header mode={mode} />

  <main class={`mode-${mode}`}>
    <!-- Hero with cover image -->
    <section class="relative">
      {post.cover_image ? (
        <div class="aspect-[21/9] bg-[rgb(var(--color-gray-very-light))] overflow-hidden">
          <img
            src={post.cover_image}
            alt={post.title}
            class="w-full h-full object-cover"
          />
        </div>
      ) : (
        <div class="aspect-[21/9] bg-gradient-to-br from-[rgb(var(--color-brand-primary))] to-[rgb(var(--color-b2c-primary))]" />
      )}
    </section>

    <!-- Article content -->
    <article class="py-16 bg-white">
      <div class="max-w-4xl mx-auto px-6 lg:px-16">
        <!-- Breadcrumb -->
        <nav class="mb-8">
          <ol class="flex items-center space-x-2 text-sm text-[rgb(var(--color-gray-medium))]">
            <li><a href="/" class="hover:text-[rgb(var(--color-brand-primary))]">Inicio</a></li>
            <li>/</li>
            <li><a href="/blog" class="hover:text-[rgb(var(--color-brand-primary))]">Blog</a></li>
            <li>/</li>
            <li class="text-[rgb(var(--color-text-primary))]">{post.title}</li>
          </ol>
        </nav>

        <!-- Article header -->
        <header class="mb-12">
          <!-- Category badge -->
          <div class="flex items-center gap-4 mb-6">
            <span class={`px-4 py-2 rounded-full text-sm font-semibold ${
              mode === 'b2b'
                ? 'bg-[rgb(var(--color-b2b-primary),0.1)] text-[rgb(var(--color-b2b-primary))]'
                : mode === 'b2c'
                ? 'bg-[rgb(var(--color-b2c-primary),0.1)] text-[rgb(var(--color-b2c-primary))]'
                : 'bg-[rgb(var(--color-brand-primary),0.1)] text-[rgb(var(--color-brand-primary))]'
            }`}>
              {categoryDisplay}
            </span>
            {post.reading_time && (
              <span class="text-sm text-[rgb(var(--color-gray-medium))]">
                {post.reading_time} min de lectura
              </span>
            )}
          </div>

          <!-- Title -->
          <h1 class="font-heading font-bold text-4xl md:text-5xl lg:text-6xl mb-6 text-[rgb(var(--color-text-primary))]">
            {post.title}
          </h1>

          <!-- Excerpt -->
          <p class="text-xl text-[rgb(var(--color-gray-medium))] mb-8 leading-relaxed">
            {post.excerpt}
          </p>

          <!-- Meta info -->
          <div class="flex items-center gap-6 text-sm text-[rgb(var(--color-gray-medium))]">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              <span>{post.author}</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <time datetime={post.published_at}>{formattedDate}</time>
            </div>
          </div>

          <!-- Tags -->
          {post.tags && post.tags.length > 0 && (
            <div class="flex flex-wrap gap-2 mt-6">
              {post.tags.map((tag: string) => (
                <span class="px-3 py-1 rounded-full text-xs font-medium bg-[rgb(var(--color-gray-very-light))] text-[rgb(var(--color-gray-medium))]">
                  #{tag}
                </span>
              ))}
            </div>
          )}
        </header>

        <!-- Article body -->
        <div class="prose prose-lg max-w-none
          prose-headings:font-heading prose-headings:font-bold prose-headings:text-[rgb(var(--color-text-primary))]
          prose-p:text-[rgb(var(--color-gray-dark))] prose-p:leading-relaxed
          prose-a:text-[rgb(var(--color-brand-primary))] prose-a:no-underline hover:prose-a:underline
          prose-strong:text-[rgb(var(--color-text-primary))]
          prose-ul:text-[rgb(var(--color-gray-dark))]
          prose-ol:text-[rgb(var(--color-gray-dark))]
          prose-blockquote:border-l-4 prose-blockquote:border-[rgb(var(--color-brand-primary))]
          prose-blockquote:text-[rgb(var(--color-gray-medium))] prose-blockquote:italic
          prose-code:text-[rgb(var(--color-b2b-primary))] prose-code:bg-[rgb(var(--color-gray-very-light))]
          prose-pre:bg-[rgb(var(--color-gray-very-light))]
          prose-img:rounded-xl prose-img:shadow-lg
        ">
          <div set:html={post.content} />
        </div>

        <!-- Share buttons -->
        <div class="mt-16 pt-8 border-t border-[rgb(var(--color-gray-light))]">
          <h3 class="font-heading font-semibold text-lg mb-4 text-[rgb(var(--color-text-primary))]">
            Compartir este artículo
          </h3>
          <div class="flex gap-4">
            <a
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.title)}&url=${encodeURIComponent(`https://equitraccion.com/blog/${post.slug}`)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="px-6 py-3 rounded-full bg-[#1DA1F2] text-white font-medium hover:bg-[#1a8cd8] transition-colors"
            >
              Twitter
            </a>
            <a
              href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(`https://equitraccion.com/blog/${post.slug}`)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="px-6 py-3 rounded-full bg-[#1877F2] text-white font-medium hover:bg-[#166fe5] transition-colors"
            >
              Facebook
            </a>
            <a
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(`https://equitraccion.com/blog/${post.slug}`)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="px-6 py-3 rounded-full bg-[#0A66C2] text-white font-medium hover:bg-[#095196] transition-colors"
            >
              LinkedIn
            </a>
          </div>
        </div>
      </div>
    </article>

    <!-- Back to blog CTA -->
    <section class="py-16 bg-[rgb(var(--color-beige-linen))]">
      <div class="max-w-4xl mx-auto px-6 lg:px-16 text-center">
        <a
          href="/blog"
          class="inline-flex items-center gap-2 px-8 py-4 rounded-full bg-[rgb(var(--color-brand-primary))] text-white font-semibold hover:bg-[rgb(var(--color-brand-primary),0.9)] transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Volver al blog
        </a>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  /* Additional prose styles for markdown content */
  .prose h2 {
    margin-top: 2.5rem;
    margin-bottom: 1.25rem;
  }

  .prose h3 {
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .prose p {
    margin-bottom: 1.5rem;
  }

  .prose ul, .prose ol {
    margin-bottom: 1.5rem;
  }

  .prose li {
    margin-bottom: 0.5rem;
  }
</style>
