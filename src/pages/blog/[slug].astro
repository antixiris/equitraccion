---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { supabase } from '../../lib/supabase';
import type { BlogPost } from '../../lib/supabase';
import { marked } from 'marked';

// Configure marked options for backward compatibility with old posts
marked.setOptions({
  breaks: true,
  gfm: true,
});

// Get the slug from the URL
const { slug } = Astro.params;

// Fetch the blog post from Supabase
const { data: post, error } = await supabase
  .from('blog_posts')
  .select('*')
  .eq('slug', slug)
  .eq('published', true)
  .single();

// If post not found or error, return 404
if (error || !post) {
  return Astro.redirect('/404');
}

// Check if content is HTML or Markdown (HTML starts with tags)
const isHtml = post.content && post.content.trim().startsWith('<');
const contentHtml = isHtml ? post.content : marked.parse(post.content || '');

// Map category to display name
const categoryMap: Record<string, string> = {
  'forestales': 'Silvicultura',
  'desarrollo': 'Desarrollo Personal',
  'formacion': 'Formación',
  'fundacion': 'Fundación'
};

const categoryDisplay = categoryMap[post.category] || post.category;

// Determine mode based on category
let mode: 'b2b' | 'b2c' | 'hybrid' = 'hybrid';
if (post.category === 'forestales' || post.category === 'formacion') {
  mode = 'b2b';
} else if (post.category === 'desarrollo') {
  mode = 'b2c';
}

// Format date
const publishedDate = new Date(post.published_at || post.created_at);
const formattedDate = publishedDate.toLocaleDateString('es-ES', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout
  title={`${post.title} | Blog Equitracción`}
  description={post.excerpt}
  mode={mode}
>
  <Header mode={mode} />

  <main class={`mode-${mode}`}>
    <!-- Hero with cover image -->
    <section class="relative">
      {post.cover_image ? (
        <div class="aspect-[21/9] bg-[rgb(var(--color-gray-very-light))] overflow-hidden">
          <img
            src={post.cover_image}
            alt={post.title}
            class="w-full h-full object-cover"
          />
        </div>
      ) : (
        <div class="aspect-[21/9] bg-gradient-to-br from-[rgb(var(--color-brand-primary))] to-[rgb(var(--color-b2c-primary))]" />
      )}
    </section>

    <!-- Article content -->
    <article class="py-16 bg-white">
      <div class="max-w-4xl mx-auto px-6 lg:px-16">
        <!-- Breadcrumb -->
        <nav class="mb-8">
          <ol class="flex items-center space-x-2 text-sm text-[rgb(var(--color-gray-medium))]">
            <li><a href="/" class="hover:text-[rgb(var(--color-brand-primary))]">Inicio</a></li>
            <li>/</li>
            <li><a href="/blog" class="hover:text-[rgb(var(--color-brand-primary))]">Blog</a></li>
            <li>/</li>
            <li class="text-[rgb(var(--color-text-primary))]">{post.title}</li>
          </ol>
        </nav>

        <!-- Article header -->
        <header class="mb-12">
          <!-- Category badge -->
          <div class="flex items-center gap-4 mb-6">
            <span class={`px-4 py-2 rounded-full text-sm font-semibold ${
              mode === 'b2b'
                ? 'bg-[rgb(var(--color-b2b-primary),0.1)] text-[rgb(var(--color-b2b-primary))]'
                : mode === 'b2c'
                ? 'bg-[rgb(var(--color-b2c-primary),0.1)] text-[rgb(var(--color-b2c-primary))]'
                : 'bg-[rgb(var(--color-brand-primary),0.1)] text-[rgb(var(--color-brand-primary))]'
            }`}>
              {categoryDisplay}
            </span>
            {post.reading_time && (
              <span class="text-sm text-[rgb(var(--color-gray-medium))]">
                {post.reading_time} min de lectura
              </span>
            )}
          </div>

          <!-- Title -->
          <h1 class="font-heading font-bold text-4xl md:text-5xl lg:text-6xl mb-6 text-[rgb(var(--color-text-primary))]">
            {post.title}
          </h1>

          <!-- Excerpt -->
          <p class="text-xl text-[rgb(var(--color-gray-medium))] mb-8 leading-relaxed">
            {post.excerpt}
          </p>

          <!-- Meta info -->
          <div class="flex items-center gap-6 text-sm text-[rgb(var(--color-gray-medium))]">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              <span>{post.author}</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <time datetime={post.published_at}>{formattedDate}</time>
            </div>
          </div>

          <!-- Tags -->
          {post.tags && post.tags.length > 0 && (
            <div class="flex flex-wrap gap-2 mt-8">
              {post.tags.map((tag: string) => (
                <span class="px-3 py-1 rounded-full text-sm font-medium bg-[rgb(var(--color-gray-very-light))] text-[rgb(var(--color-gray-medium))]">
                  #{tag}
                </span>
              ))}
            </div>
          )}
        </header>

        <!-- Article body -->
        <div class="prose prose-lg max-w-none text-xl
          prose-headings:font-heading prose-headings:font-bold prose-headings:text-[rgb(var(--color-text-primary))]
          prose-p:text-[rgb(var(--color-gray-dark))] prose-p:leading-relaxed prose-p:text-xl
          prose-a:text-[rgb(var(--color-brand-primary))] prose-a:no-underline hover:prose-a:underline
          prose-strong:text-[rgb(var(--color-text-primary))]
          prose-ul:text-[rgb(var(--color-gray-dark))] prose-li:text-xl
          prose-ol:text-[rgb(var(--color-gray-dark))]
          prose-blockquote:border-l-4 prose-blockquote:border-[rgb(var(--color-brand-primary))]
          prose-blockquote:text-[rgb(var(--color-gray-medium))] prose-blockquote:italic prose-blockquote:text-xl
          prose-code:text-[rgb(var(--color-b2b-primary))] prose-code:bg-[rgb(var(--color-gray-very-light))]
          prose-pre:bg-[rgb(var(--color-gray-very-light))]
          prose-img:rounded-xl prose-img:shadow-lg
        ">
          <div set:html={contentHtml} />
        </div>

        <!-- Share buttons -->
        <div class="mt-16 pt-8 border-t border-[rgb(var(--color-gray-light))]">
          <h3 class="font-heading font-semibold text-lg mb-4 text-[rgb(var(--color-text-primary))]">
            Compartir este artículo
          </h3>
          <div class="flex gap-2 flex-wrap mt-5">
            <!-- Twitter/X -->
            <a
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.title)}&url=${encodeURIComponent(`https://equitraccion.com/blog/${post.slug}`)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 rounded-full bg-white flex items-center justify-center hover:scale-110 transition-all shadow-lg hover:shadow-xl border-2 border-gray-200"
              aria-label="Compartir en Twitter"
              title="Compartir en Twitter"
            >
              <svg class="w-5 h-5" fill="black" viewBox="0 0 24 24">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </a>

            <!-- Facebook -->
            <a
              href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(`https://equitraccion.com/blog/${post.slug}`)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 rounded-full bg-white flex items-center justify-center hover:scale-110 transition-all shadow-lg hover:shadow-xl border-2 border-gray-200"
              aria-label="Compartir en Facebook"
              title="Compartir en Facebook"
            >
              <svg class="w-5 h-5" fill="black" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>

            <!-- LinkedIn -->
            <a
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(`https://equitraccion.com/blog/${post.slug}`)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 rounded-full bg-white flex items-center justify-center hover:scale-110 transition-all shadow-lg hover:shadow-xl border-2 border-gray-200"
              aria-label="Compartir en LinkedIn"
              title="Compartir en LinkedIn"
            >
              <svg class="w-5 h-5" fill="black" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>

            <!-- Instagram -->
            <button
              onclick={`navigator.clipboard.writeText('${`https://equitraccion.com/blog/${post.slug}`}'); alert('¡Enlace copiado! Ahora puedes pegarlo en Instagram');`}
              class="w-10 h-10 rounded-full bg-white flex items-center justify-center hover:scale-110 transition-all shadow-lg hover:shadow-xl border-2 border-gray-200"
              aria-label="Copiar enlace para Instagram"
              title="Copiar enlace para Instagram"
            >
              <svg class="w-5 h-5" fill="black" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </button>

            <!-- WhatsApp -->
            <a
              href={`https://wa.me/?text=${encodeURIComponent(`${post.title} - https://equitraccion.com/blog/${post.slug}`)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 rounded-full bg-white flex items-center justify-center hover:scale-110 transition-all shadow-lg hover:shadow-xl border-2 border-gray-200"
              aria-label="Compartir en WhatsApp"
              title="Compartir en WhatsApp"
            >
              <svg class="w-5 h-5" fill="black" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </article>

    <!-- Back to blog CTA -->
    <section class="py-16 bg-[rgb(var(--color-beige-linen))]">
      <div class="max-w-4xl mx-auto px-6 lg:px-16 text-center">
        <a
          href="/blog"
          class="inline-flex items-center gap-2 px-8 py-4 rounded-full bg-[rgb(var(--color-brand-primary))] text-white font-semibold hover:bg-[rgb(var(--color-brand-primary),0.9)] transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Volver al blog
        </a>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  /* Additional prose styles for markdown content */
  .prose h2 {
    margin-top: 2.5rem;
    margin-bottom: 1.25rem;
  }

  .prose h3 {
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .prose p {
    margin-bottom: 1.5rem;
  }

  .prose ul, .prose ol {
    margin-bottom: 1.5rem;
  }

  .prose li {
    margin-bottom: 0.5rem;
  }
</style>
