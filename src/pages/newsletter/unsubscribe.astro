---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

// Obtener email del query string si viene del enlace del email
const url = Astro.url;
const emailFromUrl = url.searchParams.get('email') || '';
---

<BaseLayout
  title="Darse de baja de la Newsletter | Equitracción"
  description="Gestiona tu suscripción a la newsletter de Equitracción"
  mode="hybrid"
>
  <Header mode="hybrid" />

  <main class="mode-hybrid min-h-screen bg-[rgb(var(--color-beige-linen))] py-20">
    <div class="max-w-2xl mx-auto px-6">
      <!-- Card de desuscripción -->
      <div class="bg-white rounded-2xl shadow-lg p-8 md:p-12">
        <!-- Icono -->
        <div class="text-center mb-8">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-gray-100 rounded-full mb-4">
            <svg class="w-8 h-8 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          <h1 class="font-heading font-bold text-3xl md:text-4xl text-[rgb(var(--color-text-primary))] mb-3">
            Darse de baja de la Newsletter
          </h1>
          <p class="text-lg text-[rgb(var(--color-gray-medium))]">
            Lamentamos que te vayas. Si cambias de opinión, siempre puedes volver a suscribirte.
          </p>
        </div>

        <!-- Formulario -->
        <form id="unsubscribe-form" class="space-y-6">
          <div>
            <label for="email" class="block text-sm font-medium text-[rgb(var(--color-text-primary))] mb-2">
              Confirma tu email
            </label>
            <input
              type="email"
              id="email"
              name="email"
              value={emailFromUrl}
              required
              class="w-full px-4 py-3 border border-[rgb(var(--color-gray-light))] rounded-lg focus:outline-none focus:ring-2 focus:ring-[rgb(var(--color-brand-primary))] transition-colors"
              placeholder="tu@email.com"
            />
          </div>

          <!-- Mensaje de feedback -->
          <div id="message" class="hidden p-4 rounded-lg"></div>

          <!-- Botones -->
          <div class="flex flex-col sm:flex-row gap-4">
            <button
              type="submit"
              id="unsubscribe-btn"
              class="flex-1 px-6 py-3 bg-red-600 text-white rounded-lg font-semibold hover:bg-red-700 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
            >
              <span id="btn-text">Confirmar baja</span>
              <span id="btn-loading" class="hidden">Procesando...</span>
            </button>
            <a
              href="/"
              class="flex-1 px-6 py-3 bg-gray-200 text-gray-700 rounded-lg font-semibold hover:bg-gray-300 transition-colors text-center"
            >
              Volver al inicio
            </a>
          </div>
        </form>

        <!-- Razones opcionales -->
        <div class="mt-8 pt-8 border-t border-gray-200">
          <p class="text-sm text-[rgb(var(--color-gray-medium))] text-center">
            ¿Quieres decirnos por qué te das de baja? Tu feedback nos ayuda a mejorar.<br>
            <a href="/contacto" class="text-[rgb(var(--color-brand-primary))] hover:underline">
              Enviar comentario
            </a>
          </p>
        </div>
      </div>

      <!-- Info adicional -->
      <div class="mt-8 text-center">
        <p class="text-sm text-[rgb(var(--color-gray-medium))]">
          Si tienes problemas para darte de baja, contacta con nosotros en
          <a href="mailto:info@equitraccion.com" class="text-[rgb(var(--color-brand-primary))] hover:underline">
            info@equitraccion.com
          </a>
        </p>
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>

<script>
  const form = document.getElementById('unsubscribe-form') as HTMLFormElement;
  const emailInput = document.getElementById('email') as HTMLInputElement;
  const unsubscribeBtn = document.getElementById('unsubscribe-btn') as HTMLButtonElement;
  const btnText = document.getElementById('btn-text') as HTMLSpanElement;
  const btnLoading = document.getElementById('btn-loading') as HTMLSpanElement;
  const message = document.getElementById('message') as HTMLDivElement;

  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    const email = emailInput.value.trim();

    // Ocultar mensaje previo
    message.classList.add('hidden');

    // Mostrar estado de carga
    unsubscribeBtn.disabled = true;
    btnText.classList.add('hidden');
    btnLoading.classList.remove('hidden');

    try {
      const response = await fetch('/api/newsletter/unsubscribe', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ email }),
      });

      const data = await response.json();

      // Mostrar mensaje
      message.classList.remove('hidden');
      message.textContent = data.message;

      if (data.success) {
        // Éxito
        message.classList.remove('bg-red-50', 'text-red-700', 'border-red-200');
        message.classList.add('bg-green-50', 'text-green-700', 'border', 'border-green-200');

        // Deshabilitar formulario
        emailInput.disabled = true;
        unsubscribeBtn.disabled = true;
        btnText.textContent = 'Baja confirmada';
        btnText.classList.remove('hidden');
        btnLoading.classList.add('hidden');

        // Opcional: redirigir después de 3 segundos
        setTimeout(() => {
          window.location.href = '/';
        }, 3000);
      } else {
        // Error
        message.classList.remove('bg-green-50', 'text-green-700', 'border-green-200');
        message.classList.add('bg-red-50', 'text-red-700', 'border', 'border-red-200');

        // Restaurar botón
        unsubscribeBtn.disabled = false;
        btnText.classList.remove('hidden');
        btnLoading.classList.add('hidden');
      }
    } catch (error) {
      console.error('Unsubscribe error:', error);

      message.classList.remove('hidden', 'bg-green-50', 'text-green-700', 'border-green-200');
      message.classList.add('bg-red-50', 'text-red-700', 'border', 'border-red-200');
      message.textContent = 'Error de conexión. Por favor, intenta de nuevo.';

      // Restaurar botón
      unsubscribeBtn.disabled = false;
      btnText.classList.remove('hidden');
      btnLoading.classList.add('hidden');
    }
  });
</script>
