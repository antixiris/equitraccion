---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/Button.astro';
import { supabase } from '../lib/supabase';
import type { BlogPost } from '../lib/supabase';

// Fetch blog posts from Supabase
console.log('üîç Fetching posts from Supabase...');
console.log('üìç Supabase URL:', import.meta.env.PUBLIC_SUPABASE_URL);
console.log('üîë Anon Key exists:', !!import.meta.env.PUBLIC_SUPABASE_ANON_KEY);

const { data: posts, error } = await supabase
  .from('blog_posts')
  .select('*')
  .eq('published', true)
  .order('published_at', { ascending: false });

console.log('üìä Posts fetched:', posts?.length || 0);
console.log('‚ùå Error:', error);

if (error) {
  console.error('Error fetching blog posts:', error);
}

// Map Supabase posts to article format
const articles = (posts || []).map((post: BlogPost) => {
  // Map category to display name
  const categoryMap: Record<string, string> = {
    'forestales': 'Silvicultura',
    'desarrollo': 'Desarrollo Personal',
    'formacion': 'Formaci√≥n',
    'fundacion': 'Fundaci√≥n'
  };

  // Determine mode based on category
  let mode: 'b2b' | 'b2c' | 'hybrid' = 'hybrid';
  if (post.category === 'forestales' || post.category === 'formacion') {
    mode = 'b2b';
  } else if (post.category === 'desarrollo') {
    mode = 'b2c';
  }

  return {
    slug: post.slug,
    title: post.title,
    excerpt: post.excerpt,
    category: categoryMap[post.category] || post.category,
    date: post.published_at || post.created_at,
    readTime: `${post.reading_time || 5} min`,
    image: post.cover_image || '/images/blog/default.jpg',
    mode
  };
});

// Categor√≠as √∫nicas para filtrado
const categories = ['Todas', ...new Set(articles.map(a => a.category))];
---

<BaseLayout
  title="Blog | Equitracci√≥n"
  description="Historias, conocimiento t√©cnico y reflexiones sobre silvicultura sostenible, tracci√≥n animal y desarrollo personal asistido por caballos."
  mode="hybrid"
>
  <Header mode="hybrid" />

  <main class="mode-hybrid">
    <!-- Hero -->
    <section class="bg-gradient-to-br from-[rgb(var(--color-brand-primary))] to-[rgb(var(--color-b2c-primary))] text-white py-20">
      <div class="max-w-4xl mx-auto px-6 lg:px-16 text-center">
        <h1 class="font-heading font-bold text-5xl md:text-6xl mb-6">
          Blog
        </h1>
        <p class="text-xl md:text-2xl text-white/90">
          Conocimiento t√©cnico, historias reales y reflexiones sobre c√≥mo la tracci√≥n animal transforma bosques y personas.
        </p>
      </div>
    </section>

    <!-- Filtros de categor√≠a -->
    <section class="py-8 bg-white border-b border-[rgb(var(--color-gray-light))]">
      <div class="max-w-7xl mx-auto px-6 lg:px-16">
        <div class="flex flex-wrap gap-3 justify-center">
          {categories.map(cat => (
            <button
              class={`px-6 py-2 rounded-full font-medium transition-all ${
                cat === 'Todas'
                  ? 'bg-[rgb(var(--color-brand-primary))] text-white'
                  : 'bg-[rgb(var(--color-gray-very-light))] text-[rgb(var(--color-gray-medium))] hover:bg-[rgb(var(--color-gray-light))]'
              }`}
              data-category={cat}
            >
              {cat}
            </button>
          ))}
        </div>
      </div>
    </section>

    <!-- Grid de art√≠culos -->
    <section class="py-24 bg-[rgb(var(--color-beige-linen))]">
      <div class="max-w-7xl mx-auto px-6 lg:px-16">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8" id="articles-grid">
          {articles.map(article => (
            <article
              class="bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-lg transition-shadow"
              data-category={article.category}
            >
              <a href={`/blog/${article.slug}`} class="block group">
                {/* Imagen */}
                <div class="aspect-[16/10] bg-[rgb(var(--color-gray-very-light))] overflow-hidden">
                  <img
                    src={article.image}
                    alt={article.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    loading="lazy"
                  />
                </div>

                {/* Contenido */}
                <div class="p-6">
                  {/* Meta */}
                  <div class="flex items-center justify-between mb-3">
                    <span class={`px-3 py-1 rounded-full text-xs font-semibold ${
                      article.mode === 'b2b'
                        ? 'bg-[rgb(var(--color-b2b-primary),0.1)] text-[rgb(var(--color-b2b-primary))]'
                        : article.mode === 'b2c'
                        ? 'bg-[rgb(var(--color-b2c-primary),0.1)] text-[rgb(var(--color-b2c-primary))]'
                        : 'bg-[rgb(var(--color-brand-primary),0.1)] text-[rgb(var(--color-brand-primary))]'
                    }`}>
                      {article.category}
                    </span>
                    <span class="text-sm text-[rgb(var(--color-gray-medium))]">
                      {article.readTime}
                    </span>
                  </div>

                  {/* T√≠tulo */}
                  <h2 class="font-heading font-bold text-xl mb-3 text-[rgb(var(--color-text-primary))] group-hover:text-[rgb(var(--color-brand-primary))] transition-colors">
                    {article.title}
                  </h2>

                  {/* Excerpt */}
                  <p class="text-[rgb(var(--color-gray-medium))] mb-4 line-clamp-3">
                    {article.excerpt}
                  </p>

                  {/* Fecha */}
                  <time class="text-sm text-[rgb(var(--color-gray-medium))]">
                    {new Date(article.date).toLocaleDateString('es-ES', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </time>
                </div>
              </a>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- Newsletter CTA -->
    <section class="py-24 bg-white">
      <div class="max-w-4xl mx-auto px-6 lg:px-16 text-center">
        <div class="bg-gradient-to-br from-[rgb(var(--color-brand-primary))] to-[rgb(var(--color-b2c-primary))] rounded-3xl p-12 text-white">
          <h2 class="font-heading font-bold text-3xl md:text-4xl mb-4">
            Recibe nuestras historias
          </h2>
          <p class="text-xl text-white/90 mb-8">
            Un email mensual con art√≠culos, casos de estudio y reflexiones sobre silvicultura y crecimiento personal.
          </p>
          <form id="newsletter-form" class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
            <!-- Honeypot field - hidden from humans, visible to bots -->
            <input
              type="text"
              name="website"
              id="newsletter-honeypot"
              tabindex="-1"
              autocomplete="off"
              style="position: absolute; left: -9999px; width: 1px; height: 1px;"
              aria-hidden="true"
            />
            <input
              type="email"
              id="newsletter-email"
              name="email"
              placeholder="tu@email.com"
              class="flex-1 px-6 py-3 rounded-full text-white placeholder:text-gray-300 focus:outline-none focus:ring-2 focus:ring-white/50"
              style="background-color: rgba(255, 255, 255, 0.1); border: 2px solid white;"
              required
            />
            <button
              type="submit"
              id="newsletter-submit"
              class="px-8 py-3 bg-white text-[rgb(var(--color-brand-primary))] rounded-full font-semibold hover:bg-white/90 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
            >
              <span id="newsletter-button-text">Suscribirme</span>
              <span id="newsletter-button-loading" class="hidden">Enviando...</span>
            </button>
          </form>
          <p id="newsletter-message" class="text-sm text-white/90 mt-4 hidden"></p>
          <p id="newsletter-info" class="text-sm text-white/70 mt-4">
            Sin spam. Cancela cuando quieras.
          </p>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<script>
  // Filtrado de art√≠culos por categor√≠a
  const categoryButtons = document.querySelectorAll('[data-category]');
  const articles = document.querySelectorAll('#articles-grid article');

  categoryButtons.forEach(button => {
    button.addEventListener('click', () => {
      const category = button.getAttribute('data-category');

      // Update active button
      categoryButtons.forEach(btn => {
        btn.classList.remove('bg-[rgb(var(--color-brand-primary))]', 'text-white');
        btn.classList.add('bg-[rgb(var(--color-gray-very-light))]', 'text-[rgb(var(--color-gray-medium))]');
      });
      button.classList.add('bg-[rgb(var(--color-brand-primary))]', 'text-white');
      button.classList.remove('bg-[rgb(var(--color-gray-very-light))]', 'text-[rgb(var(--color-gray-medium))]');

      // Filter articles
      articles.forEach(article => {
        const articleCategory = article.getAttribute('data-category');
        if (category === 'Todas' || articleCategory === category) {
          article.style.display = 'block';
        } else {
          article.style.display = 'none';
        }
      });
    });
  });

  // Newsletter form handler
  const newsletterForm = document.getElementById('newsletter-form') as HTMLFormElement;
  const newsletterEmail = document.getElementById('newsletter-email') as HTMLInputElement;
  const newsletterSubmit = document.getElementById('newsletter-submit') as HTMLButtonElement;
  const newsletterButtonText = document.getElementById('newsletter-button-text') as HTMLSpanElement;
  const newsletterButtonLoading = document.getElementById('newsletter-button-loading') as HTMLSpanElement;
  const newsletterMessage = document.getElementById('newsletter-message') as HTMLParagraphElement;
  const newsletterInfo = document.getElementById('newsletter-info') as HTMLParagraphElement;

  newsletterForm?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const email = newsletterEmail.value.trim();
    const honeypot = document.getElementById('newsletter-honeypot').value;

    // Mostrar estado de carga
    newsletterSubmit.disabled = true;
    newsletterButtonText.classList.add('hidden');
    newsletterButtonLoading.classList.remove('hidden');
    newsletterMessage.classList.add('hidden');

    try {
      const response = await fetch('/api/newsletter/subscribe', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ email, honeypot }),
      });

      const data = await response.json();

      if (data.success) {
        // √âxito
        newsletterMessage.textContent = data.message;
        newsletterMessage.classList.remove('hidden');
        newsletterMessage.classList.remove('text-red-300');
        newsletterMessage.classList.add('text-white');
        newsletterInfo.classList.add('hidden');
        newsletterForm.reset();
      } else {
        // Error
        newsletterMessage.textContent = data.message;
        newsletterMessage.classList.remove('hidden');
        newsletterMessage.classList.add('text-red-300');
        newsletterMessage.classList.remove('text-white');
      }
    } catch (error) {
      console.error('Newsletter subscription error:', error);
      newsletterMessage.textContent = 'Error de conexi√≥n. Por favor, intenta de nuevo.';
      newsletterMessage.classList.remove('hidden');
      newsletterMessage.classList.add('text-red-300');
    } finally {
      // Restaurar bot√≥n
      newsletterSubmit.disabled = false;
      newsletterButtonText.classList.remove('hidden');
      newsletterButtonLoading.classList.add('hidden');
    }
  });
</script>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
